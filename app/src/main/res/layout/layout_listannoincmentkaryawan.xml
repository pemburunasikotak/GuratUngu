<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/warnabgUnggu"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".admin.listannoncment.ListAnnoncment">


    <ImageView
        android:layout_width="340dp"
        android:layout_height="71dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:background="@drawable/logounggu"
        android:contentDescription="@string/todo" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginTop="13dp"
        android:textStyle="italic"
        android:layout_marginStart="30dp"
        android:textSize="20dp"
        android:layout_gravity="center_vertical"
        android:text="Penggumuman"
        android:textColor="#FCF2F2"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvlistannouncmentkaryawan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"/>


</LinearLayout>