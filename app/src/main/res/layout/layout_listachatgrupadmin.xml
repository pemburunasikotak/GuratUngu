<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/warnabgUnggu"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="340dp"
        android:layout_height="71dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/logounggu"
        android:contentDescription="@string/todo" />
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="350dp"
        android:layout_marginTop="70dp"
        android:layout_marginStart="45dp"
        android:orientation="vertical"
        android:background="@drawable/ic_bglogin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="22dp"
            android:textAlignment="viewStart"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:text="List Karyawan Yg Join"
            android:textColor="#000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="22dp"
            android:textAlignment="viewStart"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:text="Nama"
            android:textColor="#000"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvlistkaryawanjoin"
            android:layout_width="match_parent"
            android:layout_height="180dp" />

        <Button
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_bgbirumuda"
            android:layout_marginStart="100dp"
            android:layout_marginTop="15dp"
            android:text="@string/ok"
            />


    </LinearLayout>

</LinearLayout>