<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/warnabgUnggu"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".admin.IndexAdmin">

    <ImageView
        android:layout_width="340dp"
        android:layout_height="90dp"
        android:layout_marginTop="160dp"
        android:layout_gravity="center"
        android:background="@drawable/logounggu"
        android:contentDescription="@string/todo" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="22dp"
        android:textStyle="italic"
        android:textAlignment="center"
        android:fontFamily="sans-serif-black"
        android:textSize="24sp"
        android:text="Selamat Datang"
        android:textColor="#FCF2F2"/>
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="160dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/ic_bglogin">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="50dp"
            android:orientation="vertical"
            android:background="@drawable/ic_bg_index_dalam">
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:text="Info Event Project"
                android:textStyle="italic"
                android:textSize="10dp"/>
            <Button
                android:id="@+id/btn_infoeventadmin"
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/iconttanggal"
                android:layout_marginStart="12dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_marginTop="30dp"
            android:layout_height="100dp"
            android:layout_marginStart="60dp"
            android:orientation="vertical"
            android:background="@drawable/ic_bg_index_dalam">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:text="Announcement "
                android:textStyle="italic"
                android:textSize="10dp"/>
            <Button
                android:id="@+id/btn_announcamentadmin"
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/iconpengumuman"
                android:layout_marginStart="12dp"/>
        </LinearLayout>
        
    </LinearLayout>
    <Button
        android:id="@+id/btn_creatakunindexadmin"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_warna_hijau"
        android:text="Create new akun Karyawan"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textStyle="italic"
        android:layout_gravity="center"/>


</LinearLayout>