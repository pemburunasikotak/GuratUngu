<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/warnabgUnggu"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".admin.Announcment">

    <ImageView
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:background="@drawable/logounggu"
        android:contentDescription="@string/todo" />

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:background="@drawable/ic_bglogin"
        android:orientation="vertical">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="300dp"
           android:orientation="horizontal">
           <TextView
               android:layout_width="80dp"
               android:layout_height="30dp"
               android:layout_marginTop="-90dp"
               android:layout_marginStart="16dp"
               android:text="Isi Text"
               android:textStyle="italic"
               android:textSize="20dp"/>
           <EditText
               android:id="@+id/et_annocom"
               android:layout_width="match_parent"
               android:textSize="20dp"
               android:layout_height="match_parent"
               android:background="#C4C4C4"
               android:layout_marginTop="20dp"
               android:layout_marginEnd="20dp"/>


       </LinearLayout>

        <Button
            android:id="@+id/btn_tambahAnno"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="23dp"
            android:background="@drawable/ic_bglistagenda"
            android:text="@string/tambah" />


    </LinearLayout>

</LinearLayout>